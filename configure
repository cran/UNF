#!/bin/sh
PKG_CFLAGS=
PKG_CXXFLAGS=
PKG_LIBS=

UNAME=`uname`
if ( test "$UNAME" == "Linux" ); then
	true
elif ( test "$UNAME" == "Darwin" ); then
	PKG_CFLAGS=" -DICONV18"
	PKG_CXXFLAGS=" -DICONV18"
fi

echo "PKG_CFLAGS = $PKG_CFLAGS" > src/Makevars.unix
echo "PKG_CXXFLAGS = $PKG_CXXFLAGS" >> src/Makevars.unix
echo "PKG_LIBS = $PKG_LIBS"  >> src/Makevars.unix
cp src/Makevars.unix src/Makevars
exit 0
